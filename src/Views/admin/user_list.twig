{% extends "layout.twig" %}

{% block title %}{{ title }} - {{ app_name }}{% endblock %}

{% block styles %}
<style>
    .admin-container {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }
    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }
    .user-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }
    .user-table th, .user-table td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid #eee;
    }
    .user-table th {
        font-weight: 600;
        color: #7f8c8d;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.05em;
    }
    .role-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }
    .role-admin { background: #fee2e2; color: #991b1b; }
    .role-bibliophile { background: #dcfce7; color: #166534; }
    .role-user { background: #f1f5f9; color: #475569; }
    
    .role-form {
        display: flex;
        gap: 0.5rem;
    }
    .role-select {
        padding: 0.4rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 0.9rem;
    }
    .btn-update {
        padding: 0.4rem 0.8rem;
        background: #3498db;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.85rem;
        transition: background 0.2s;
    }
    .btn-update:hover { background: #2980b9; }
</style>
{% endblock %}

{% block content %}
<div class="admin-container">
    <div class="admin-header">
        <h2>{{ title }}</h2>
        <a href="/admin/dashboard" style="color: #3498db; text-decoration: none;">&larr; Indietro al Pannello</a>
    </div>

    <table class="user-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Ruolo Attuale</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <span class="role-badge role-{{ user.role }}">
                        {{ user.role|capitalize }}
                    </span>
                </td>
                <td>
                    <form action="/admin/users/{{ user.id }}/role" method="POST" class="role-form">
                        <select name="role" class="role-select">
                            <option value="user" {% if user.role == 'user' %}selected{% endif %}>Utente</option>
                            <option value="bibliophile" {% if user.role == 'bibliophile' %}selected{% endif %}>Bibliofilo</option>
                            <option value="admin" {% if user.role == 'admin' %}selected{% endif %}>Admin</option>
                        </select>
                        <button type="submit" class="btn-update">Cambia Ruolo</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
