{% extends "layout.twig" %}

{% block title %}{{ title }} - {{ app_name }}{% endblock %}

{% block styles %}
<style>
    .api-keys-container {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }
    .api-keys-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }
    .btn-create {
        padding: 0.6rem 1.2rem;
        background: #27ae60;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 600;
        transition: background 0.2s;
    }
    .btn-create:hover { background: #219150; }
    
    .api-keys-table {
        width: 100%;
        border-collapse: collapse;
    }
    .api-keys-table th, .api-keys-table td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid #eee;
    }
    .api-keys-table th {
        background: #f8f9fa;
        font-weight: 600;
        color: #2c3e50;
    }
    .status-badge {
        padding: 0.3rem 0.6rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
    }
    .status-active { background: #dcfce7; color: #166534; }
    .status-inactive { background: #fee; color: #991b1b; }
    
    .actions {
        display: flex;
        gap: 0.5rem;
    }
    .btn-action {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 6px;
        background: #3498db;
        color: white;
        cursor: pointer;
        font-size: 0.85rem;
        font-weight: 600;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        box-sizing: border-box;
        min-height: 36px;
    }
    .btn-action:hover { 
        background: #2980b9;
        transform: translateY(-1px);
    }
    .btn-action.btn-edit { background: #3498db; }
    .btn-action.btn-delete { background: #e74c3c; }
    .btn-action.btn-delete:hover { background: #c0392b; }
    
    .key-value {
        font-family: 'Courier New', monospace;
        font-size: 0.85rem;
        background: #f8f9fa;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
{% endblock %}

{% block content %}
<div class="api-keys-container">
    <div class="api-keys-header">
        <h2>{{ title }}</h2>
        <div>
            <a href="/admin/dashboard" style="color: #3498db; text-decoration: none; margin-right: 1rem;">&larr; Dashboard</a>
            <a href="/admin/api-keys/create" class="btn-create">+ Nuova API Key</a>
        </div>
    </div>

    {% if api_keys|length > 0 %}
    <table class="api-keys-table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Etichetta</th>
                <th>Valore</th>
                <th>Stato</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            {% for key in api_keys %}
            <tr>
                <td><code>{{ key.keyName }}</code></td>
                <td><strong>{{ key.keyLabel }}</strong></td>
                <td><span class="key-value">{{ key.keyValue }}</span></td>
                <td>
                    <span class="status-badge status-{{ key.isActive ? 'active' : 'inactive' }}">
                        {{ key.isActive ? 'Attiva' : 'Inattiva' }}
                    </span>
                </td>
                <td class="actions">
                    <a href="/admin/api-keys/edit/{{ key.id }}" class="btn-action btn-edit">Modifica</a>
                    <a href="/admin/api-keys/delete/{{ key.id }}" class="btn-action btn-delete" onclick="return confirm('Sicuro di voler eliminare questa API key?')">Elimina</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <div style="text-align: center; padding: 3rem; color: #95a5a6;">
        <p style="font-size: 1.2rem; margin-bottom: 1rem;">ðŸ“Œ Nessuna API key configurata</p>
        <p>Aggiungi la tua prima API key per iniziare.</p>
    </div>
    {% endif %}
</div>
{% endblock %}
