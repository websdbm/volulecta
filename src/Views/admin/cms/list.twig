{% extends "layout.twig" %}

{% block title %}{{ title }} - {{ app_name }}{% endblock %}

{% block styles %}
<style>
    .cms-container {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }
    .cms-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }
    .btn-create {
        padding: 0.6rem 1.2rem;
        background: #27ae60;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 600;
        transition: background 0.2s;
    }
    .btn-create:hover { background: #219150; }
    
    .page-table {
        width: 100%;
        border-collapse: collapse;
    }
    .page-table th, .page-table td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid #eee;
    }
    .status-badge {
        padding: 0.2rem 0.6rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
    }
    .status-published { background: #dcfce7; color: #166534; }
    .status-draft { background: #fef9c3; color: #854d0e; }
    
    .actions {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        align-items: center;
    }
    .btn-action {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 6px;
        background: #3498db;
        color: white;
        cursor: pointer;
        font-size: 0.85rem;
        font-weight: 600;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-block;
    }
    .btn-action:hover { 
        background: #2980b9;
        transform: translateY(-1px);
    }
    .btn-action.btn-builder { background: #3498db; }
    .btn-action.btn-preview { background: #9b59b6; }
    .btn-action.btn-preview:hover { background: #8e44ad; }
    .btn-action.btn-publish { background: #27ae60; }
    .btn-action.btn-publish:hover { background: #229954; }
    .btn-action.btn-draft { background: #f39c12; }
    .btn-action.btn-draft:hover { background: #e67e22; }
    .btn-action.btn-homepage { background: #8e44ad; }
    .btn-action.btn-homepage:hover { background: #7d3c98; }
    .btn-action.btn-delete { background: #e74c3c; }
    .btn-action.btn-delete:hover { background: #c0392b; }
    .home-badge {
        display: inline-block;
        background: #8e44ad;
        color: white;
        padding: 0.3rem 0.6rem;
        border-radius: 4px;
        font-size: 0.75rem;
        margin-left: 0.5rem;
        font-weight: 600;
    }
</style>
{% endblock %}

{% block content %}
<div class="cms-container">
    <div class="cms-header">
        <h2>{{ title }}</h2>
        <div class="actions">
            <a href="/admin/dashboard" style="color: #3498db; text-decoration: none; align-self: center; margin-right: 1rem;">&larr; Dashboard</a>
            <a href="/admin/cms/create" class="btn-create">+ Nuova Pagina</a>
        </div>
    </div>

    <table class="page-table">
        <thead>
            <tr>
                <th>Titolo</th>
                <th>Slug</th>
                <th>Template</th>
                <th>Stato</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            {% for page in pages %}
            <tr>
                <td><strong>{{ page.title }}</strong></td>
                <td><code>/p/{{ page.slug }}</code></td>
                <td>{{ page.template }}</td>
                <td>
                    <span class="status-badge status-{{ page.status }}">
                        {{ page.status|capitalize }}
                    </span>
                    {% if page.isHomepage %}<span class="home-badge">üè† Homepage</span>{% endif %}
                </td>
                <td class="actions">
                    <a href="/admin/cms/builder/{{ page.id }}" class="btn-action btn-builder">Modifica</a>
                    <a href="/p/{{ page.slug }}" class="btn-action btn-preview" target="_blank">Anteprima</a>
                    {% if page.status == 'published' %}
                        {% if page.isHomepage %}
                            <button class="btn-action btn-draft" style="opacity: 0.5; cursor: not-allowed;" disabled title="Non √® possibile mettere in bozza la homepage">Pubblicata</button>
                        {% else %}
                            <button class="btn-action btn-draft" onclick="unpublishPage({{ page.id }})">Metti in Bozza</button>
                        {% endif %}
                    {% else %}
                        <button class="btn-action btn-publish" onclick="publishPage({{ page.id }})">Pubblica</button>
                    {% endif %}
                    {% if not page.isHomepage %}
                        <button class="btn-action btn-homepage" onclick="setHomepage({{ page.id }})">Imposta Homepage</button>
                    {% endif %}
                    <a href="/admin/cms/delete/{{ page.id }}" class="btn-action btn-delete" onclick="return confirm('Sicuro di voler eliminare questa pagina?')">Elimina</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" style="text-align: center; padding: 2rem; color: #95a5a6;">
                    Nessuna pagina creata.
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<script>
    async function publishPage(pageId) {
        if (!confirm('Sei sicuro di voler pubblicare questa pagina?')) return;

        try {
            const res = await fetch(`/admin/cms/${pageId}/publish`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });
            
            if (res.ok) {
                alert('Pagina pubblicata con successo!');
                window.location.reload();
            } else {
                alert('Errore nel pubblicare la pagina');
            }
        } catch (err) {
            alert('Errore: ' + err.message);
        }
    }

    async function unpublishPage(pageId) {
        if (!confirm('Sei sicuro di voler mettere questa pagina in bozza?')) return;

        try {
            const res = await fetch(`/admin/cms/${pageId}/unpublish`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });
            
            if (res.ok) {
                const data = await res.json();
                if (data.status === 'success') {
                    alert('Pagina messa in bozza con successo!');
                    window.location.reload();
                } else {
                    alert(data.message || 'Errore nell\'aggiornare lo stato della pagina');
                }
            } else {
                const data = await res.json();
                alert(data.message || 'Errore nell\'aggiornare lo stato della pagina');
            }
        } catch (err) {
            alert('Errore: ' + err.message);
        }
    }

    async function setHomepage(pageId) {
        if (!confirm('Sei sicuro di voler impostare questa pagina come homepage?')) return;

        try {
            const res = await fetch(`/admin/cms/${pageId}/set-homepage`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });
            
            if (res.ok) {
                alert('Homepage impostata con successo!');
                window.location.reload();
            } else {
                alert('Errore nell\'impostare la homepage');
            }
        } catch (err) {
            alert('Errore: ' + err.message);
        }
    }
</script>
{% endblock %}
