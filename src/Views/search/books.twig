{% extends "layout.twig" %}

{% block title %}{{ title }} - {{ app_name }}{% endblock %}

{% block styles %}
<style>
    .search-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .search-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3rem 2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: 0 8px 30px rgba(0,0,0,0.12);
    }

    .search-header h1 {
        margin: 0 0 0.5rem 0;
        font-size: 2.5rem;
    }

    .search-header p {
        margin: 0;
        opacity: 0.9;
        font-size: 1.1rem;
    }

    .search-box {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        margin-bottom: 2rem;
    }

    .search-form {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .search-input-group {
        flex: 1;
        position: relative;
    }

    .search-input {
        width: 100%;
        padding: 1rem;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-sizing: border-box;
    }

    .search-input:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .language-select {
        padding: 1rem;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
        background: white;
        cursor: pointer;
        transition: all 0.3s ease;
        box-sizing: border-box;
        min-width: 140px;
    }

    .language-select:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .language-select:hover {
        border-color: #667eea;
    }

    .search-button {
        padding: 1rem 2rem;
        background: #667eea;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .search-button:hover {
        background: #5568d3;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .search-button:active {
        transform: translateY(0);
    }

    .search-button.loading {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .search-info {
        color: #666;
        font-size: 0.9rem;
        margin-top: 0.5rem;
    }

    .results-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        padding: 2rem;
    }

    .results-header {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #e0e0e0;
    }

    .results-count {
        font-size: 1.2rem;
        color: #333;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .source-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .source-badge.amazon {
        background: linear-gradient(135deg, #ff9900 0%, #ff6b00 100%);
        color: white;
        box-shadow: 0 2px 8px rgba(255, 153, 0, 0.3);
    }

    .source-badge.open-library {
        background: linear-gradient(135deg, #27ae60 0%, #1e8449 100%);
        color: white;
        box-shadow: 0 2px 8px rgba(39, 174, 96, 0.3);
    }

    .results-query {
        color: #666;
        font-size: 0.95rem;
        margin-top: 0.25rem;
    }

    .books-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
        margin-top: 1.5rem;
    }

    .book-card {
        background: white;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .book-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.12);
        border-color: #667eea;
    }

    .book-cover {
        width: 100%;
        height: 250px;
        background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .book-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .book-cover-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #ccc;
    }

    .book-info {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .book-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        margin: 0 0 0.5rem 0;
        line-height: 1.4;
        min-height: 2.8em;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .book-author {
        color: #666;
        font-size: 0.95rem;
        margin: 0 0 0.5rem 0;
        min-height: 1.4em;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .book-year {
        color: #999;
        font-size: 0.85rem;
        margin: 0 0 1rem 0;
    }

    .book-publisher {
        color: #666;
        font-size: 0.85rem;
        margin: 0 0 1rem 0;
        min-height: 1.4em;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .book-isbn {
        background: #f5f5f5;
        padding: 0.5rem;
        border-radius: 4px;
        font-size: 0.8rem;
        color: #666;
        margin: 0 0 1rem 0;
        font-family: monospace;
        word-break: break-all;
    }

    .book-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: auto;
    }

    .book-button {
        flex: 1;
        padding: 0.75rem;
        border: none;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

    .book-button-primary {
        background: #667eea;
        color: white;
    }

    .book-button-primary:hover {
        background: #5568d3;
    }

    .book-button-secondary {
        background: #f0f0f0;
        color: #333;
        border: 1px solid #e0e0e0;
    }

    .book-button-secondary:hover {
        background: #e8e8e8;
    }

    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: #999;
    }

    .empty-state-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .empty-state-title {
        font-size: 1.3rem;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .error-message {
        background: #fee;
        border: 1px solid #fcc;
        color: #c33;
        padding: 1rem;
        border-radius: 8px;
        margin: 1rem 0;
    }

    .loading-spinner {
        display: inline-block;
        width: 20px;
        height: 20px;
        border: 3px solid rgba(255,255,255,0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
        to { transform: rotate(360deg); }
    }

    .hidden {
        display: none;
    }

    @media (max-width: 768px) {
        .search-header {
            padding: 2rem 1rem;
        }

        .search-header h1 {
            font-size: 1.8rem;
        }

        .search-form {
            flex-direction: column;
        }

        .books-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="search-container">
    <div class="search-header">
        <h1>üìö Ricerca Libri</h1>
        <p>Cerca tra milioni di libri disponibili</p>
    </div>

    <div class="search-box">
        <form id="searchForm" class="search-form" onsubmit="handleSearch(event)">
            <div class="search-input-group">
                <input 
                    type="text" 
                    id="searchQuery" 
                    name="query" 
                    class="search-input" 
                    placeholder="Titolo, autore, ISBN... (minimo 2 caratteri)"
                    autocomplete="off"
                    required
                    minlength="2"
                    maxlength="200"
                >
            </div>
            <select id="searchLanguage" class="language-select">
                <option value="">üåç Tutte le lingue</option>
                <option value="it">üáÆüáπ Italiano</option>
                <option value="en">üá¨üáß Inglese</option>
                <option value="es">üá™üá∏ Spagnolo</option>
                <option value="fr">üá´üá∑ Francese</option>
                <option value="de">üá©üá™ Tedesco</option>
                <option value="pt">üáµüáπ Portoghese</option>
                <option value="ru">üá∑üá∫ Russo</option>
                <option value="zh">üá®üá≥ Cinese</option>
                <option value="ja">üáØüáµ Giapponese</option>
                <option value="ko">üá∞üá∑ Coreano</option>
            </select>
            <button type="submit" class="search-button" id="searchBtn">
                <span id="searchBtnText">üîç Cerca</span>
                <span id="searchSpinner" class="loading-spinner hidden"></span>
            </button>
        </form>
        <div class="search-info">
            üí° Inserisci un titolo, un autore o un ISBN per cercare
        </div>
    </div>

    <div id="resultsContainer" class="results-container hidden">
        <div class="results-header">
            <p class="results-count" id="resultsCount"></p>
            <p class="results-query" id="resultsQuery"></p>
        </div>

        <div id="errorMessage" class="error-message hidden"></div>
        <div id="booksList" class="books-grid"></div>
        <div id="emptyState" class="empty-state hidden">
            <div class="empty-state-icon">üìñ</div>
            <div class="empty-state-title">Nessun libro trovato</div>
            <p>Prova a cercare con termini diversi</p>
        </div>
    </div>
</div>

<script>
    async function handleSearch(event) {
        event.preventDefault();
        
        const query = document.getElementById('searchQuery').value.trim();
        const language = document.getElementById('searchLanguage').value;
        const searchBtn = document.getElementById('searchBtn');
        const searchBtnText = document.getElementById('searchBtnText');
        const searchSpinner = document.getElementById('searchSpinner');
        const resultsContainer = document.getElementById('resultsContainer');
        const booksList = document.getElementById('booksList');
        const errorMessage = document.getElementById('errorMessage');
        const emptyState = document.getElementById('emptyState');
        
        if (!query || query.length < 2) {
            alert('Inserisci almeno 2 caratteri per la ricerca');
            return;
        }

        // Mostra loading
        searchBtn.classList.add('loading');
        searchBtn.disabled = true;
        searchBtnText.classList.add('hidden');
        searchSpinner.classList.remove('hidden');
        resultsContainer.classList.add('hidden');
        errorMessage.classList.add('hidden');

        try {
            const response = await fetch('/api/search/books', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ 
                    query,
                    language: language || null
                })
            });

            const data = await response.json();

            // Rimuovi loading
            searchBtn.classList.remove('loading');
            searchBtn.disabled = false;
            searchBtnText.classList.remove('hidden');
            searchSpinner.classList.add('hidden');

            if (!data.success) {
                errorMessage.textContent = data.error || 'Errore durante la ricerca';
                errorMessage.classList.remove('hidden');
                resultsContainer.classList.add('hidden');
                return;
            }

            // Mostra risultati
            resultsContainer.classList.remove('hidden');
            
            // Determina la fonte
            const source = data.source || data.results[0]?.source || 'open_library';
            const sourceName = source === 'amazon' ? 'üõí Amazon' : 'üìö Open Library';
            const sourceClass = source === 'amazon' ? 'amazon' : 'open-library';
            
            document.getElementById('resultsCount').innerHTML = 
                `<span>üìä Trovati ${data.count} risultati</span>
                 <span class="source-badge ${sourceClass}">${sourceName}</span>`;
            document.getElementById('resultsQuery').textContent = 
                `Ricerca: "${data.query}"`;

            if (data.results.length === 0) {
                booksList.innerHTML = '';
                emptyState.classList.remove('hidden');
                return;
            }

            emptyState.classList.add('hidden');
            booksList.innerHTML = data.results.map(book => createBookCard(book)).join('');
            errorMessage.classList.add('hidden');

        } catch (error) {
            searchBtn.classList.remove('loading');
            searchBtn.disabled = false;
            searchBtnText.classList.remove('hidden');
            searchSpinner.classList.add('hidden');
            
            errorMessage.textContent = 'Errore di connessione: ' + error.message;
            errorMessage.classList.remove('hidden');
            resultsContainer.classList.add('hidden');
        }
    }

    function createBookCard(book) {
        const coverUrl = book.cover_url;
        const amazonLink = book.amazon_link || '#';
        
        return `
            <div class="book-card">
                <div class="book-cover">
                    ${coverUrl ? `<img src="${escapeHtml(coverUrl)}" alt="${escapeHtml(book.title)}" loading="lazy">` : '<div class="book-cover-placeholder">üìñ</div>'}
                </div>
                <div class="book-info">
                    <h3 class="book-title">${escapeHtml(book.title)}</h3>
                    ${book.author ? `<p class="book-author">üë§ ${escapeHtml(book.author)}</p>` : ''}
                    ${book.publisher ? `<p class="book-publisher">üè¢ ${escapeHtml(book.publisher)}</p>` : ''}
                    ${book.year ? `<p class="book-year">üìÖ ${book.year}</p>` : ''}
                    ${book.isbn ? `<div class="book-isbn">ISBN: ${escapeHtml(book.isbn)}</div>` : ''}
                    <div class="book-actions">
                        <a href="${escapeHtml(amazonLink)}" target="_blank" class="book-button book-button-primary">
                            üîó Vedi su Amazon
                        </a>
                        <button type="button" class="book-button book-button-secondary" onclick="addToCollection('${escapeHtml(book.title)}')">
                            ‚≠ê Aggiungi
                        </button>
                    </div>
                </div>
            </div>
        `;
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    function addToCollection(title) {
        alert('Aggiunta a raccolta: ' + title + '\n\n(Funzionalit√† da implementare)');
    }

    // Focus sulla input al caricamento
    document.addEventListener('DOMContentLoaded', () => {
        document.getElementById('searchQuery').focus();
    });

    // Cerca quando si preme Enter
    document.getElementById('searchQuery').addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
            handleSearch(e);
        }
    });
</script>
{% endblock %}
