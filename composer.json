{
    "name": "volulecta/volulecta",
    "description": "Volulecta - Servizio di raccomandazioni librarie personalizzate",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "monolog/monolog": "^3.5",
        "php-di/php-di": "^7.0",
        "respect/validation": "^2.3",
        "robmorgan/phinx": "^0.15",
        "slim/csrf": "^1.4",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.12",
        "slim/twig-view": "^3.3",
        "thewirecutter/paapi5-php-sdk": "^1.3",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
